<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pngo.chapter61final.Driver">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/sumButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="21dp"
            android:text="Sum" />

        <Button
            android:id="@+id/averageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/sumButton"
            android:layout_alignBottom="@+id/sumButton"
            android:layout_toEndOf="@+id/sumButton"
            android:layout_toRightOf="@+id/sumButton"
            android:text="Average" />

        <Button
            android:id="@+id/productButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/averageButton"
            android:layout_alignBottom="@+id/averageButton"
            android:layout_toEndOf="@+id/averageButton"
            android:layout_toRightOf="@+id/averageButton"
            android:text="Product" />

        <Button
            android:id="@+id/factorialButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/productButton"
            android:layout_alignBottom="@+id/productButton"
            android:layout_toEndOf="@+id/productButton"
            android:layout_toRightOf="@+id/productButton"
            android:text="Factorial" />

        <TextView
            android:id="@+id/display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yInput"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="result" />

        <EditText
            android:id="@+id/xInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sumButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="66dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="x" />

        <EditText
            android:id="@+id/yInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/xInput"
            android:layout_alignStart="@+id/xInput"
            android:layout_below="@+id/xInput"
            android:layout_marginTop="26dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="y" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
